<% title 'Log In' %>

<%= form_tag authenticate_path, id: "new_session" do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div id="forgot-link"><%= link_to "Forgot Password?", new_password_reset_path %></div>
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] || true %>
    <%= label_tag :remember_me, nil, class: "inline" %>
  </div>
  <div class="actions">
    <%= button_tag "Log In &raquo;".html_safe, class: "fancy" %>
  </div>
<% end %>
<br />
<p><%= link_to "Don't have an account?", register_path %></p>