<%= form_for @group do |f| %>
  <%= f.error_messages %>

  <div class="field">
     <%= f.label :name %>
     <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :name, "Members" %>
    <%= f.collection_select :user_ids, User.order(:name), :id, :name_and_email, {}, {multiple: true} %>
  </div>
  <div class="field">
    <%= f.label :start_date %>
    <%= f.text_field :start_date, class: "date-picker" %>
  </div>
  
  <div class="field">
    <%= f.label :end_date %>
    <%= f.text_field :end_date, class: "date-picker" %>
  </div>

  <div class="actions">
    <%= f.button "Save &raquo;".html_safe, class: "fancy" %>
  </div>
<% end %>